      <node category-path="/carovex/apisports/football"
            factory-class="com.apisports.knime.football.nodes.universal.UniversalNodeFactory"/>
      <!-- Curated Nodes -->
      <node category-path="/carovex/apisports/football"
            factory-class="com.apisports.knime.football.nodes.leagues.FootballLeaguesNodeFactory"/>
      <node category-path="/carovex/apisports/football"
            factory-class="com.apisports.knime.football.nodes.teams.FootballTeamsNodeFactory"/>
