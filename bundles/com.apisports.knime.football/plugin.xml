            factory-class="com.apisports.knime.football.nodes.standings.FootballStandingsNodeFactory"/>
      <node category-path="/carovex/apisports/football"
            factory-class="com.apisports.knime.football.nodes.stats.FootballStatsNodeFactory"/>
      <node category-path="/carovex/apisports/football"
            factory-class="com.apisports.knime.football.nodes.predictions.FootballPredictionsNodeFactory"/>
   </extension>
   <extension point="org.knime.workbench.repository.categories">
      <category level-id="football" name="Football" path="/carovex/apisports" icon="icons/football.png"/>
   </extension>
</plugin>
